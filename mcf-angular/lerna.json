{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "npmClient": "npm",
  "packages": ["packages/*"],
  "command": {
    "bootstrap": {
      "npmClientArgs": ["--legacy-peer-deps"]
    },
    "run": {
      "stream": true,
      "parallel": true,
      "npmClient": "npm"
    }
  }
}
